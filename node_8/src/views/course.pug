extends index


block content
    .course-title
        h1= title
        //- TODO: кнопка доступна только если у пользователя нет доступа к занятиям курса
        button.btn.btn-primary Запросить доступ
    .row
        .col.s12
            .card
                .card-image
                    img(src= course.url, alt= course.title)
                    span.card-title.course-text-invert= course.title
                .card-content
                    p= course.description
            ul.collapsible.expandable
                each lesson in lessons
                    li 
                        .collapsible-header
                            i.material-icons control_point
                            span= lesson.title
                            //- TODO: Ссылка доступна только если автор дал доступ пользователю
                            a(href=`/lesson/${course.id}/${lesson.id}`).waves-effect.waves-light.btn-small.lesson-button Перейти
                        .collapsible-body
                            p= lesson.description

