extends index

block content
    h1= message
    .row
        .col.s12.m7
            if !courses.length
                h6 Нет созданных курсов
            else 
                each course in courses
                    .card 
                        .card-image
                            img(src= course.url, alt= course.title)
                            span.card-title.course-text-invert= course.title
                        .card-content
                            p= course.description
                        if isAuth
                            .card-action
                                a(href=`/course/${course.id}`) О курсе